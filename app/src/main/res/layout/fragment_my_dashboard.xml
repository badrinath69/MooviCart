<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.MyDashboardFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >


    <LinearLayout
        android:id="@+id/dashboard_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="bottom"
            android:fontFamily="@font/poppins_thin"
            android:text="DashBoard"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="15dp"
                        android:weightSum="4"
                        android:id="@+id/db_ll1">
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:weightSum="3"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_weight="2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    app:tint="@color/orange"
                                    android:src="@drawable/share_vector"></ImageView>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:background="@drawable/round_bg"
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:text="SHARES:"
                                        android:layout_weight="1"
                                        android:textSize="8sp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="end"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>
                                    <TextView
                                        android:id="@+id/fmd_shares"

                                        android:text=".."
                                        android:textSize="8sp"
                                        android:gravity="start"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>



                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:weightSum="3"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_weight="2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:src="@drawable/baseline_star_24"></ImageView>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:background="@drawable/round_bg"
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:text="RATING :"
                                        android:layout_weight="1"
                                        android:textSize="8sp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="end"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>
                                    <TextView
                                        android:id="@+id/fmd_ratings"

                                        android:text=".."
                                        android:textSize="8sp"
                                        android:gravity="start"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>



                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:weightSum="3"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_weight="2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    app:tint="@color/orange"
                                    android:src="@drawable/like_vector"></ImageView>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:background="@drawable/round_bg"
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:text="LIKES :"
                                        android:layout_weight="1"
                                        android:textSize="8sp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="end"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>
                                    <TextView
                                        android:id="@+id/fmd_likes"
                                        android:text=".."
                                        android:textSize="8sp"
                                        android:gravity="start"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>



                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:layout_margin="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:weightSum="3"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_weight="2"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="60dp"
                                    android:src="@drawable/icon_home"></ImageView>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:background="@drawable/round_bg"
                                    android:layout_width="match_parent"
                                    android:weightSum="2"
                                    android:layout_height="match_parent">
                                    <TextView
                                        android:text="SHARES:"
                                        android:layout_weight="1"
                                        android:textSize="8sp"
                                        android:layout_marginTop="4dp"
                                        android:gravity="end"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>
                                    <TextView
                                        android:id="@+id/fmd_redeems"
                                        android:text="62"
                                        android:textSize="8sp"
                                        android:gravity="start"
                                        android:layout_marginTop="4dp"
                                        android:layout_weight="1"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"></TextView>



                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="15dp"
                        app:layout_constraintTop_toBottomOf="@id/db_ll1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="MOVIES"
                        android:fontFamily="@font/poppins_thin"
                        android:textSize="20dp"
                        android:id="@+id/db_tv1"
                        ></TextView>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/fdb_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        app:layout_constraintTop_toBottomOf="@id/db_tv1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:listitem="@layout/db_movie_card"
                        ></androidx.recyclerview.widget.RecyclerView>
                    <ProgressBar
                        android:id="@+id/fdb_pb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/fdb_rv"
                        app:layout_constraintEnd_toEndOf="@id/fdb_rv"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="@id/fdb_rv"
                        app:layout_constraintTop_toTopOf="@id/fdb_rv"
                        app:layout_constraintVertical_bias="0.418" />

                </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frv_item1"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:backgroundTint="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/dbitem_photo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:text="Bahubali aiwhrgiwgu"
            android:layout_weight="1"
            android:textSize="12sp"

            android:padding="4dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/dbitem_text"
            app:layout_constraintStart_toStartOf="@id/dbitem_photo"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@id/dbitem_photo"
            android:textColor="@color/white"
            android:background="@drawable/round_bg2"
            android:fontFamily="@font/poppins_thin"
            android:textStyle="bold"
            android:layout_width="160dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"></TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


